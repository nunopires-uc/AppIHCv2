<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MapsActivity"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>


    <View   android:id="@+id/rectangle_456"
        android:background="@drawable/rectangle_456_shape"
        android:layout_marginStart="33.15dp"
        android:layout_marginTop="64dp"
        android:layout_width="322.85dp"
        android:layout_height="43dp" />

    <SearchView
        android:id="@+id/searchView"
        android:background="@drawable/rectangle_453_shape"
        android:layout_marginStart="29dp"
        android:layout_marginTop="60dp"
        android:layout_width="323.99dp"
        android:layout_height="44.14dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search a region">
    </SearchView>

    <!--<ListView
        android:id="@+id/listview"
        android:layout_width="323.99dp"
        android:layout_height="fill_parent"
        android:layout_below="@+id/searchView" />-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/add_note"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        android:layout_marginBottom="700dp"
        android:background="@color/merda"
        app:backgroundTint="@color/merda"
        android:contentDescription="Hello my darkness"
        android:layout_margin="16dp"/>


    <View   android:id="@+id/ellipse_38"
        android:background="@drawable/ellipse_38_shape"
        android:layout_marginStart="308dp"
        android:layout_marginTop="610dp"
        android:layout_width="66.62dp"
        android:layout_height="66.62dp" />
    
    <ImageButton
        android:id="@+id/CreateNoteButton"
        android:backgroundTint="#FFD4B7"
        android:layout_marginStart="305dp"
        android:src="@drawable/add_note"
        android:clickable="true"
        android:layout_marginTop="608dp"
        android:background="@drawable/ellipse_38_shape"
        android:layout_width="66.62dp"
        android:layout_height="66.62dp"/>





    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="32dp"
        app:itemBackground="@color/barra_navegacao"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        />



</RelativeLayout>